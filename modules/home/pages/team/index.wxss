#page-home-club #section-header .card-main {
  background-size: cover;
  height: 250rpx;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3); }
  #page-home-club #section-header .card-main .box {
    padding-left: 60rpx; }
